SUMMARY = "accelerometer-app"
DESCRIPTION = "Compiles and installs the accelerometer program"
LICENSE = "CLOSED"

SRC_URI = "file://accelerometer-app.c \
           file://Makefile"

S = "${WORKDIR}"

do_compile() {
        make
}

do_install() {
        install -d ${D}${bindir}
        install -m 0755 accelerometer-app ${D}${bindir}
}

inherit autotools